<UserControl x:Class="LineDisplay.MachineOff_Success"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Name="Symbol" Grid.Row="0"/>
        <StackPanel Name="OffCodePanel" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Lime" Margin="20">
            <TextBox Name="labelOffCode" Text=" " HorizontalAlignment="Center" FontSize="80" 
                   HorizontalContentAlignment="Center" Margin="0,100,0,0" Background="Lime" 
                     BorderBrush="Lime"/>

            <TextBox Name="labelOffReason" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                               VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" FontSize="80" 
                     Margin="0,30,0,0" Background="Lime" BorderBrush="lime"/>


        </StackPanel>

    </Grid>
</UserControl>
