<UserControl x:Class="LineDisplay.MachineOff_Failure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black">
    <Grid>
        <Image Name="Symbol"/> 
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Red" Margin="20">
            <TextBox Name="labelOffCode" Text=" " 
                     HorizontalAlignment="Center" FontSize="80" 
                     HorizontalContentAlignment="Center" Background="Red" BorderBrush="red" />

            <TextBox Text="Bad Problem Code" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                               VerticalAlignment="Bottom" BorderBrush="red"
                     VerticalContentAlignment="Bottom" FontSize="80" Background="Red" />


        </StackPanel>

    </Grid>
</UserControl>
